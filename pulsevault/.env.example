# PulseVault Configuration

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Storage paths
MEDIA_ROOT=/mnt/media
UPLOAD_DIR=/mnt/media/uploads
VIDEO_DIR=/mnt/media/videos
AUDIT_DIR=/mnt/media/audit

# Security
HMAC_SECRET=your-secret-key-here-change-in-production
TOKEN_EXPIRY_SECONDS=300

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Optional Database Mirror (leave empty to disable)
# Supported: postgresql://user:pass@host:port/db, duckdb://path/to/db.duckdb, mysql://user:pass@host:port/db
METADATA_DSN=

# Transcoding
TRANSCODE_ENABLED=true
FFMPEG_THREADS=0
RENDITIONS=240p,360p,480p,720p,1080p
ENABLE_HEVC=false
ENABLE_AV1=false

# Observability
METRICS_ENABLED=true
METRICS_PORT=9090
LOG_LEVEL=info

# Optional MinIO for immutable log backup
MINIO_ENABLED=false
MINIO_ENDPOINT=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=pulsevault-audit
